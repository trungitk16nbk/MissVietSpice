<section class="deal-banner">
  <div class="container">
    <div class="deal-bg" style="background-image: url('{% if section.settings.deal_bg_img %}{{ section.settings.deal_bg_img | img_url: 'master' }}{% else %}https://via.placeholder.com/1920x1024{% endif %}');">
      <div class="deal-products-content">
        <div class="block-deal">
          <div class="section-title">
            {% if section.settings.section_ttsub !='' %}
            <span style="color: {{ section.settings.text_color }};" class="deal-ttsub">{{ section.settings.section_ttsub }}</span>
            {% endif %}
            {% if section.settings.section_title !='' %}
            <h2 style="color: {{ section.settings.text_color }};">{{ section.settings.section_title }}</h2>
            {% endif %}
          </div>
          <ul class="contdown_row">
            <li class="countdown_section">
              <span id="days" class="countdown_timer"></span>
              <span class="countdown_title">{{ settings.day_title }}</span>
            </li>
            <li class="countdown_section">
              <span id="hours" class="countdown_timer"></span>
              <span class="countdown_title">{{ settings.hour_title }}</span>
            </li>
            <li class="countdown_section">
              <span id="minutes" class="countdown_timer"></span>
              <span class="countdown_title">{{ settings.minute_title }}</span>
            </li>
            <li class="countdown_section">
              <span id="seconds" class="countdown_timer"></span>
              <span class="countdown_title">{{ settings.second_title }}</span>
            </li>
          </ul>
          <div class="deal-offer-btn">
            <a href="{{ section.settings.collection_url }}" class="btn btn-style1">{{ section.settings.shop_btn }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
