<style>
  .deal-banner {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  @media(max-width: 1199px) {
    .deal-banner {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }
  .deal-banner .block-deal{
    text-align: center;
  }
  .deal-banner .deal-bg{
    position: relative;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 450px;
  }
  .deal-banner .deal-products-content{
    max-width: 427px;
  }
  .deal-banner .deal-products-content .section-title .deal-ttsub{
    font-size: 16px;
    font-weight: 400;
    display: block;
  }
  .deal-banner .deal-products-content .section-title h2{
    margin-top: 9px;
    margin-bottom: 0;
  }
  .deal-banner .deal-products-content .contdown_row{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 22px;
  }
  .deal-banner .deal-products-content .contdown_row .countdown_section{
    position: relative;
    width: 70px;
    height: 70px;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: #fff;
    background-color: var(--color-primary);
    {% if settings.enable_rtl %}
    margin-left: 10px;
    {% else %}
    margin-right: 10px;
    {% endif %}
  }
  .deal-banner .deal-products-content .contdown_row .countdown_section::after{
    content: ":";
    position: absolute;
    bottom: 50%;
    transform: translateY(50%);
    {% if settings.enable_rtl %}
    left: -8px;
    {% else %}
    right: -8px;
    {% endif %}
    font-size: 22px;
    font-weight: 600;
    color: var(--color-secondary);
  }
  .deal-banner .deal-products-content .contdown_row .countdown_section:last-child::after{
    display: none;
  }
  .deal-banner .deal-products-content .contdown_row .countdown_section .countdown_title{
    display: block;
    text-align: center;
    font-size: 12px;
    font-weight: 400;
    text-transform: uppercase;
    display: inline-block;
  }
  .deal-banner .deal-products-content .contdown_row .countdown_section .countdown_timer{
    font-size: 28px;
    font-weight: 600;
  }
  .deal-banner .deal-products-content .deal-offer-btn{
    margin-top: 34px;
  }
  @media (max-width : 1199px){
    .deal-banner .deal-products-content .contdown_row .countdown_section .countdown_timer{
      font-size: 22px;
    }
    .deal-banner .deal-products-content .section-title h2{
      margin-top: 14px;
    }
    .deal-banner .deal-products-content .deal-offer-btn{
      margin-top: 30px;
    }
    .deal-banner .deal-bg{
      height: 350px;
    }
  }
  @media (max-width : 991px){
    .deal-banner .deal-products-content .section-title .deal-ttsub {
      font-size: 14px;
    }
    .deal-banner .deal-products-content .contdown_row {
      margin-top: 20px;
    }
    .deal-banner .deal-products-content .contdown_row .countdown_section .countdown_timer {
      font-size: 24px;
    }
    .deal-banner .deal-products-content .contdown_row .countdown_section .countdown_title {
      margin-top: 5px;
    }
    .deal-banner .deal-products-content .deal-offer-btn {
      margin-top: 28px;
    }
    .deal-banner .deal-products-content .section-title h2{
      margin-top: 14px;
    }
  }
  @media (max-width : 767px){
    .deal-banner .deal-products-content .contdown_row {
      margin-top: 11px;
    }
    .deal-banner .deal-products-content .section-title h2{
      margin-top: 5px;
    }
    .deal-banner .deal-products-content .contdown_row .countdown_section .countdown_timer {
      font-size: 20px;
    }
    .deal-banner .deal-products-content .contdown_row .countdown_section::after {
      font-size: 20px;
    }
    .deal-banner .deal-products-content .deal-offer-btn {
      margin-top: 18px;
    }
    .deal-banner .deal-products-content .contdown_row .countdown_section {
      width: 60px;
      height: 60px;
    }
  }
</style>
<script>
  addEventListener('DOMContentLoaded', (event) => {
  const second = 1000,
  minute = second * 60,
  hour = minute * 60,
  day = hour * 24;
  let countDown = new Date('{{ section.settings.product_mont }} {{ section.settings.product_date }}, {{ section.settings.product_year }} 00:00:00').getTime(),
  x = setInterval(function() {
    let now = new Date().getTime(),
    distance = countDown - now;
    document.getElementById('days').innerText = Math.floor(distance / (day)),
    document.getElementById('hours').innerText = Math.floor((distance % (day)) / (hour)),
    document.getElementById('minutes').innerText = Math.floor((distance % (hour)) / (minute)),
    document.getElementById('seconds').innerText = Math.floor((distance % (minute)) / second);
  }, second)
});
</script>