            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                const clickCount = document.getElementById("charity").textContent = `$${data}`;
                setTimeout(callApiWithDelay, 3000); // Đặt lại đệ quy sau 3 giây
            })
            .catch(error => {
                console.error('Có lỗi xảy ra:', error);
                // setTimeout(callApiWithDelay, 3000); // Đặt lại đệ quy sau 3 giây, ngay cả khi có lỗi
            });
    }

    // Gọi hàm để bắt đầu lấy dữ liệu từ API mỗi 3 giây
