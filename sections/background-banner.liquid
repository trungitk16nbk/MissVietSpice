<!-- banner-area start -->
<section class="banner-bgimg">
    <ul class="banner-wrap">
        <li class="banner-wrapper">
            <div class="banner-block">
                <img src="{% if section.settings.banner_bgimg %}{{ section.settings.banner_bgimg | img_url: 'master' }}{% else %}https://dummyimage.com/960x650/f7f7f7/999999{% endif %}">
                <div class="text-content">
                    {% if section.settings.banner_title2 != '' %}
                    <h1>
                        <span > {{ section.settings.banner_title2 }} </span>
                    </h1>
                    {% endif %}
                    {% if section.settings.banner_sub_title2!= '' %}
                    <span>{{ section.settings.banner_sub_title2 }}</span>
                    {% endif %}
                    {% if section.settings.banner_title1 != '' %}
                    <h1>
                        <span id="charity"> $0 </span>
                    </h1>
                    {% endif %}
                    {% if section.settings.banner_sub_title != '' %}
                    <span>{{ section.settings.banner_sub_title }}</span>
                    {% endif %}
                    {% if section.settings.banner_button != '' %}
                    <a class="btn btn-style1" href="{{ section.settings.banner_url }}">
                        {{ section.settings.banner_button }}
                    </a>
                    {% endif %}
                </div>
            </div>
        </li>
        <li class="banner-wrapper">
            <div class="video-block">
                <img src="{% if section.settings.banner_video_img %}{{ section.settings.banner_video_img | img_url: 'master' }}{% else %}https://dummyimage.com/960x650/f7f7f7/999999{% endif %}">
                <div class="text-content">
                    <h2>
                        <span>{{ section.settings.video_title1 }}</span>
                        <span>{{ section.settings.video_title2 }}</span>
                    </h2>
                    <a class="play-button popup-youtube" href="{{ section.settings.video_url }}">
                        <i class="feather-play"></i>
                        <span class="video-icon-sonar">
                            <span class="video-icon-sonar-bfr"></span>
                        </span>
                    </a>
                </div>
            </div>
        </li>
    </ul>
</section>
<!-- banne-area end -->
