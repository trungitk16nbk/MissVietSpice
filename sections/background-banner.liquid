    position: absolute;
    z-index: 0;
    text-align: center;
}
.banner-bgimg .video-block .text-content h2{
    font-size: 32px;
    line-height: 1;
    display: block;
}
.banner-bgimg .video-block .text-content h2 span{
    margin-top: 5px;
    font-weight: 300;
    display: block;

}
.banner-bgimg .video-block .text-content h2 span:first-child{
    font-weight: 700;
    margin-top: 0px;
    text-transform: uppercase;
}
.banner-bgimg .video-block a{
    position: relative;
    color: #fff;
    font-size: 28px;
    height: 90px;
    width: 90px;
    margin: 0 auto;
    margin-top: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 100%;
    background-color: {{ settings.color_primary }};
}
.banner-bgimg .video-block a span.video-icon-sonar{
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    top: 0;
    left: 0;
    z-index: -1;
    -webkit-animation: video-icon-sonar 2s linear infinite;
    animation: video-icon-sonar 2s linear infinite;
}
.banner-bgimg .video-block a span.video-icon-sonar-bfr{
    width: 110px;
    height: 110px;
    top: -10px;
    left: -10px;
    opacity: 1;
    position: absolute;
    z-index: -2;
    border-radius: 100%;
    background-color: #222;
}
