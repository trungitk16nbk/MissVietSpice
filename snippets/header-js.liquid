<script>
    let check = false;

    document.addEventListener('DOMContentLoaded', function() {
    const modalOpenerButtons = document.querySelectorAll('.quick-view');
    const modalCloseButtons = document.querySelectorAll('.modal-close');
    const quickAddModals = document.querySelectorAll('.quickview-modal');

    modalOpenerButtons.forEach(button => {
      button.addEventListener('click', () => {

      if (button.getAttribute('data-modal')){
        check = true;
      }
      });
    });

    modalCloseButtons.forEach(button => {
      button.addEventListener('click', () => {
        check = false;
      });
    });

    // Bắt sự kiện khi nhấn ra ngoài modal để đóng modal
    quickAddModals.forEach(modal => {
      modal.addEventListener('click', (event) => {
      check = false;
      });
    });

  });
</script>

